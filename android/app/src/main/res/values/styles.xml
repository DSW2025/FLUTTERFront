<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema para la pantalla de lanzamiento (splash) -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Tu splash background -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Opcional: si quieres que la barra de estado sea transparente -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Tema principal de la app, basado en MaterialComponents -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Usa el color de background del sistema o define el tuyo -->
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- Puedes personalizar atributos de MaterialComponents aquÃ­:
             <item name="colorPrimary">@color/tu_color_primary</item>
             <item name="colorPrimaryVariant">@color/tu_color_primary_variant</item>
             <item name="colorOnPrimary">@color/tu_color_on_primary</item>
        -->
    </style>
</resources>